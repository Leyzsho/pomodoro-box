{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "jsx": "react",
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
  },
  "exclude": [
    "node_modules"
  ]
}
